<Window x:Class="store_accounting_system.ui.ProductChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Supply" Height="280" Width="460"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>  <!-- buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="ProductId:"/>
        <TextBox   Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" x:Name="TbProductId"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="New Product Name:"/>
        <TextBox   Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" x:Name="TbName"/>
        
        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="New Price:"/>
        <TextBox   Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" x:Name="TbPrice"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Margin="4" Click="BtnAdd_Click">Update</Button>
            <Button Width="100" Margin="4" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>