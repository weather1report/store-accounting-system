<Window x:Class="store_accounting_system.ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Store Accounting System" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="8">
            <TextBlock Text="Store Accounting System" FontSize="18" FontWeight="SemiBold"/>
        </DockPanel>

        <TabControl Grid.Row="1" x:Name="MainTabs">
            <!-- TAB 1: Products -->
            <TabItem Header="Products" x:Name="TabProducts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductId" Width="90"/>

                            <TextBlock Text="Name:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductName" Width="180"/>

                            <TextBlock Text="Price:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductPrice" Width="100"/>

                            <TextBlock Text="Quantity:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductQuantity" Width="100"/>

                            <Button x:Name="BtnSearchProducts" Style="{StaticResource ToolbarButton}" Click="BtnSearchProducts_Click">Search</Button>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button x:Name="BtnAddProduct" Style="{StaticResource ToolbarButton}" Click="BtnAddProduct_Click">Add</Button>
                            <Button x:Name="BtnDeleteProduct" Style="{StaticResource ToolbarButton}" Click="BtnDeleteProduct_Click">Delete</Button>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid Grid.Row="1" x:Name="GridProducts" ItemsSource="{Binding}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 2: Customers -->
            <TabItem Header="Customers" x:Name="TabCustomers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbCustomerId" Width="90"/>

                            <TextBlock Text="Name:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbCustomerName" Width="180"/>

                            <TextBlock Text="PhoneNumber:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbCustomerPhoneNumber" Width="160"/>

                            <TextBlock Text="RegisterDate From:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpCustomerRegisterDateFrom" Width="150"/>

                            <TextBlock Text="To:" Margin="4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpCustomerRegisterDateTo" Width="150"/>

                            <Button x:Name="BtnSearchCustomers" Style="{StaticResource ToolbarButton}" Click="BtnSearchCustomers_Click">Search</Button>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button x:Name="BtnAddCustomer" Style="{StaticResource ToolbarButton}" Click="BtnAddCustomer_Click">Add</Button>
                            <Button x:Name="BtnDeleteCustomer" Style="{StaticResource ToolbarButton}" Click="BtnDeleteCustomer_Click">Delete</Button>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid Grid.Row="1" x:Name="GridCustomers" ItemsSource="{Binding}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="PhoneNumber" Binding="{Binding PhoneNumber}"/>
                            <DataGridTextColumn Header="RegisterDate" Binding="{Binding RegisterDate}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 3: Orders -->
            <TabItem Header="Orders" x:Name="TabOrders">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderId" Width="90"/>

                            <TextBlock Text="CustomerId:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderCustomerId" Width="110"/>

                            <TextBlock Text="TotalAmount:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderTotalAmount" Width="110"/>

                            <TextBlock Text="Date From:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpOrderDateFrom" Width="150"/>

                            <TextBlock Text="To:" Margin="4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpOrderDateTo" Width="150"/>

                            <Button x:Name="BtnSearchOrders" Style="{StaticResource ToolbarButton}" Click="BtnSearchOrders_Click">Search</Button>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button x:Name="BtnAddOrder" Style="{StaticResource ToolbarButton}" Click="BtnAddOrder_Click">Add</Button>
                            <Button x:Name="BtnDeleteOrder" Style="{StaticResource ToolbarButton}" Click="BtnDeleteOrder_Click">Delete</Button>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid Grid.Row="1" x:Name="GridOrders" ItemsSource="{Binding}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="CustomerId" Binding="{Binding CustomerId}"/>
                            <DataGridTextColumn Header="TotalAmount" Binding="{Binding TotalAmount}"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 4: OrderItems -->
            <TabItem Header="OrderItems" x:Name="TabOrderItems">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderItemId" Width="90"/>

                            <TextBlock Text="OrderId:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderItemOrderId" Width="110"/>

                            <TextBlock Text="Count:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderItemCount" Width="100"/>

                            <Button x:Name="BtnSearchOrderItems" Style="{StaticResource ToolbarButton}" Click="BtnSearchOrderItems_Click">Search</Button>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button x:Name="BtnAddOrderItem" Style="{StaticResource ToolbarButton}" Click="BtnAddOrderItem_Click">Add</Button>
                            <Button x:Name="BtnDeleteOrderItem" Style="{StaticResource ToolbarButton}" Click="BtnDeleteOrderItem_Click">Delete</Button>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid Grid.Row="1" x:Name="GridOrderItems" ItemsSource="{Binding}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="OrderId" Binding="{Binding OrderId}"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 5: Supplies -->
            <TabItem Header="Supplies" x:Name="TabSupplies">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbSupplyId" Width="90"/>

                            <TextBlock Text="Date From:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpSupplyDateFrom" Width="150"/>

                            <TextBlock Text="To:" Margin="4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpSupplyDateTo" Width="150"/>

                            <TextBlock Text="ProductId:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbSupplyProductId" Width="110"/>

                            <TextBlock Text="Quantity:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbSupplyQuantity" Width="100"/>

                            <Button x:Name="BtnSearchSupplies" Style="{StaticResource ToolbarButton}" Click="BtnSearchSupplies_Click">Search</Button>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                            <Button x:Name="BtnAddSupply" Style="{StaticResource ToolbarButton}" Click="BtnAddSupply_Click">Add</Button>
                            <Button x:Name="BtnDeleteSupply" Style="{StaticResource ToolbarButton}" Click="BtnDeleteSupply_Click">Delete</Button>
                        </StackPanel>
                    </DockPanel>

                    <DataGrid Grid.Row="1" x:Name="GridSupplies" ItemsSource="{Binding}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                            <DataGridTextColumn Header="ProductId" Binding="{Binding ProductId}"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
