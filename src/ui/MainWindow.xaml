<Window x:Class="store_accounting_system.ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Store Accounting System" Height="720" Width="1100"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="8">
            <TextBlock Text="Store Accounting System" FontSize="18" FontWeight="SemiBold"/>
        </DockPanel>

        <TabControl Grid.Row="1" x:Name="MainTabs" SelectionChanged="MainTabs_SelectionChanged">
            <!-- TAB 1: Products -->
            <TabItem Header="Products" x:Name="TabProducts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- панель поиска -->
                        <RowDefinition Height="*"/>    <!-- таблица -->
                        <RowDefinition Height="Auto"/> <!-- кнопки Add/Delete/Change -->
                    </Grid.RowDefinitions>

                    <!-- Row 0: поиск -->
                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductId" Width="90"/>

                            <TextBlock Text="Name:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductName" Width="180"/>

                            <TextBlock Text="MinPrice:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductMinPrice" Width="100"/>
                            <TextBlock Text="MaxPrice:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductMaxPrice" Width="100"/>

                            <TextBlock Text="MinQuantity:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductMinQuantity" Width="100"/>
                            <TextBlock Text="MaxQuantity:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbProductMaxQuantity" Width="100"/>

                            <Button x:Name="BtnSearchProducts" Style="{StaticResource ToolbarButton}" 
                                    Click="BtnSearchProducts_Click">Search</Button>
                        </WrapPanel>
                    </DockPanel>

                    <!-- Row 1: таблица -->
                    <DataGrid Grid.Row="1" x:Name="GridProducts" ItemsSource="{Binding Products}" Margin="8,0,8,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Row 2: кнопки снизу справа -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                        <Button x:Name="BtnAddProduct" Style="{StaticResource ToolbarButton}" Width="120" Height="30"
                                Click="BtnAddProduct_Click" Margin="0,0,8,0">Add</Button>
                        <Button x:Name="BtnDeleteProduct" Style="{StaticResource ToolbarButton}" Width="120" Height="30"
                                Click="BtnDeleteProduct_Click" Margin="0,0,8,0">Delete</Button>
                        <Button x:Name="BtnChangeProduct" Style="{StaticResource ToolbarButton}" Width="120" Height="30"
                                Click="BtnChangeProduct_Click">Change</Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 2: Customers -->
            <TabItem Header="Customers" x:Name="TabCustomers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- панель поиска -->
                        <RowDefinition Height="*"/>    <!-- таблица -->
                        <RowDefinition Height="Auto"/> <!-- кнопки снизу -->
                    </Grid.RowDefinitions>

                    <!-- Row 0: поиск -->
                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbCustomerId" Width="90"/>

                            <TextBlock Text="Name:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbCustomerName" Width="180"/>

                            <TextBlock Text="PhoneNumber:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbCustomerPhoneNumber" Width="160"/>

                            <TextBlock Text="RegisterDate From:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpCustomerRegisterDateFrom" Width="150"/>

                            <TextBlock Text="To:" Margin="4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpCustomerRegisterDateTo" Width="150"/>

                            <Button x:Name="BtnSearchCustomers" Style="{StaticResource ToolbarButton}" 
                                    Click="BtnSearchCustomers_Click">Search</Button>
                        </WrapPanel>
                    </DockPanel>

                    <!-- Row 1: таблица -->
                    <DataGrid Grid.Row="1" x:Name="GridCustomers" ItemsSource="{Binding Customers}" Margin="8,0,8,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                            <DataGridTextColumn Header="PhoneNumber" Binding="{Binding PhoneNumber}"/>
                            <DataGridTextColumn Header="RegisterDate" Binding="{Binding RegisterDate}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Row 2: кнопки снизу справа -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                        <Button x:Name="BtnAddCustomer" Style="{StaticResource ToolbarButton}" Width="120" Height="30"
                                Click="BtnAddCustomer_Click" Margin="0,0,8,0">Add</Button>
                        <Button x:Name="BtnDeleteCustomer" Style="{StaticResource ToolbarButton}" Width="120" Height="30"
                                Click="BtnDeleteCustomer_Click">Delete</Button>
                    </StackPanel>
                </Grid>
            </TabItem>  


            <!-- TAB 3: Orders -->
            <TabItem Header="Orders" x:Name="TabOrders">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- панель поиска -->
                        <RowDefinition Height="*"/>    <!-- таблица -->
                        <RowDefinition Height="Auto"/> <!-- кнопки снизу -->
                    </Grid.RowDefinitions>

                    <!-- Row 0: поиск -->
                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderId" Width="90"/>

                            <TextBlock Text="CustomerId:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderCustomerId" Width="110"/>

                            <TextBlock Text="MinTotalAmount:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderMinTotalAmount" Width="110"/>
                            <TextBlock Text="MaxTotalAmount:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderMaxTotalAmount" Width="110"/>

                            <TextBlock Text="Date From:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpOrderDateFrom" Width="150"/>

                            <TextBlock Text="To:" Margin="4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpOrderDateTo" Width="150"/>

                            <Button x:Name="BtnSearchOrders" Style="{StaticResource ToolbarButton}" 
                                    Click="BtnSearchOrders_Click">Search</Button>
                        </WrapPanel>
                    </DockPanel>

                    <!-- Row 1: таблица -->
                    <DataGrid Grid.Row="1" x:Name="GridOrders" ItemsSource="{Binding Orders}" Margin="8,0,8,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="CustomerId" Binding="{Binding CustomerId}"/>
                            <DataGridTextColumn Header="TotalAmount" Binding="{Binding TotalAmount}"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Row 2: кнопки снизу справа -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                        <Button x:Name="BtnAddOrder" Style="{StaticResource ToolbarButton}" Width="120" Height="30"
                                Click="BtnAddOrder_Click" Margin="0,0,8,0">Add</Button>
                        <Button x:Name="BtnDeleteOrder" Style="{StaticResource ToolbarButton}" Width="120" Height="30"
                                Click="BtnDeleteOrder_Click">Delete</Button>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- TAB 4: OrderItems -->
            <TabItem Header="OrderItems" x:Name="TabOrderItems">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderItemId" Width="90"/>

                            <TextBlock Text="OrderId:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderItemOrderId" Width="110"/>

                            <TextBlock Text="ProductId:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbOrderItemProductId" Width="100"/>
                            
                            <TextBlock Text="Date From:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpOrderItemDateFrom" Width="150"/>

                            <TextBlock Text="To:" Margin="4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpOrderItemDateTo" Width="150"/>
                            
                            

                            <Button x:Name="BtnSearchOrderItems" Style="{StaticResource ToolbarButton}" Click="BtnSearchOrderItems_Click">Search</Button>
                        </WrapPanel>
                    </DockPanel>

                    <DataGrid Grid.Row="1" x:Name="GridOrderItems" ItemsSource="{Binding OrderItems}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="OrderId" Binding="{Binding OrderId}"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                            <DataGridTextColumn Header="ProductId" Binding="{Binding ProductId}"/>
                            <DataGridTextColumn Header="Count" Binding="{Binding Count}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 5: Supplies -->
            <TabItem Header="Supplies" x:Name="TabSupplies">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- панель поиска -->
                        <RowDefinition Height="*"/>    <!-- таблица -->
                        <RowDefinition Height="Auto"/> <!-- кнопки снизу -->
                    </Grid.RowDefinitions>

                    <!-- Row 0: поиск -->
                    <DockPanel Grid.Row="0" LastChildFill="False" Margin="8">
                        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                            <TextBlock Text="Id:" Margin="4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbSupplyId" Width="90"/>

                            <TextBlock Text="Date From:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpSupplyDateFrom" Width="150"/>

                            <TextBlock Text="To:" Margin="4" VerticalAlignment="Center"/>
                            <DatePicker x:Name="DpSupplyDateTo" Width="150"/>

                            <TextBlock Text="ProductId:" Margin="8,4,4,4" VerticalAlignment="Center"/>
                            <TextBox x:Name="TbSupplyProductId" Width="110"/>

                            <Button x:Name="BtnSearchSupplies" Style="{StaticResource ToolbarButton}" 
                                    Click="BtnSearchSupplies_Click">Search</Button>
                        </WrapPanel>
                    </DockPanel>

                    <!-- Row 1: таблица -->
                    <DataGrid Grid.Row="1" x:Name="GridSupplies" ItemsSource="{Binding Supplies}" Margin="8,0,8,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                            <DataGridTextColumn Header="ProductId" Binding="{Binding ProductId}"/>
                            <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Row 2: кнопки снизу справа -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                        <Button x:Name="BtnAddSupply" Style="{StaticResource ToolbarButton}" 
                                Width="120" Height="30"
                                Click="BtnAddSupply_Click" Margin="0,0,8,0">Add</Button>
                        <Button x:Name="BtnDeleteSupply" Style="{StaticResource ToolbarButton}" 
                                Width="120" Height="30"
                                Click="BtnDeleteSupply_Click">Delete</Button>
                    </StackPanel>

                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
