<Window x:Class="store_accounting_system.ui.ProductAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="240" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>  <!-- buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Name:"/>
        <TextBox   Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" x:Name="TbName"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Price:"/>
        <TextBox   Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" x:Name="TbPrice"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Quantity:"/>
        <TextBox   Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" x:Name="TbQuantity"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Margin="4" Click="BtnAdd_Click">Add</Button>
            <Button Width="100" Margin="4" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>