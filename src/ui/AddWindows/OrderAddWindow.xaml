<Window x:Class="store_accounting_system.ui.OrderAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Order" Height="280" Width="460"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>  <!-- buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="CustomerId:"/>
        <TextBox   Grid.Row="0" Grid.Column="1" Margin="0,0,0,8" x:Name="TbCustomerId"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="TotalAmount:"/>
        <TextBox   Grid.Row="1" Grid.Column="1" Margin="0,0,0,8" x:Name="TbTotalAmount"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,8,8" VerticalAlignment="Center" Text="Date:"/>
        <DatePicker Grid.Row="2" Grid.Column="1" Margin="0,0,0,8" x:Name="DpDate"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="100" Margin="4" Click="BtnAdd_Click">Add</Button>
            <Button Width="100" Margin="4" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>